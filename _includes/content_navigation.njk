<dl class="flex pt-6 mt-6 border-t border-slate-200">
	{% if previousDoc %}
	<div class="mr-auto text-left">
		<dt class="text-sm font-normal tracking-tight text-slate-600">
			Previous
		</dt>

		<dd class="mt-1">
			<a
				href="{{ previousDoc.url | url }}"
				class="text-base font-semibold text-slate-900 hover:underline"
			>
				{{ previousDoc.data.title }}
			</a>
		</dd>
	</div>
	{% endif %} {% if nextDoc %}
	<div class="ml-auto text-right">
		<dt class="text-sm font-normal tracking-tight text-slate-600">
			Next
		</dt>

		<dd class="mt-1">
			<a
				href="{{ nextDoc.url | url }}"
				class="text-base font-semibold text-slate-900 hover:underline"
			>
				{{ nextDoc.data.title }}
			</a>
		</dd>
	</div>
	{% endif %}
</dl>
{% endif %} {% endif %}
